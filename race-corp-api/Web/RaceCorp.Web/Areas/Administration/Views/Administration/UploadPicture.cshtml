
@using RaceCorp.Common;
@using RaceCorp.Web.Areas.Administration.Models

@{
    this.ViewData["ButtonName"] = "Upload";
    this.ViewData["Title"] = $"Upload system picture";
}

@model PictureUploadModel


<div id="formInput" class="text-center">
    <h1>@ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mt-5 col-md-4 offset-md-4">
        <form method="post" class="form-group" enctype="multipart/form-data">
            <div class="form-group mb-1">
                <select class="text-center form-control" name="Type">
                    <option value="@GlobalConstants.TownImageName">Town</option>
                    <option value="@GlobalConstants.MountainImageName">Mountain</option>
                    <option value="@GlobalConstants.UpcommingRaceImageName">Upcoming Races</option>
                    <option value="@GlobalConstants.UpcommingRidesImageName">Upcoming Rides</option>
                </select>
                <input asp-for="Picture" name="Picture" class="form-control mb-1" style="width: 100%;" />
            </div>
            <div class="form-group mb-1" id="attachHere">
            </div>
            <button id="submitBtn" class="btn border border-dark mt-2" type="submit">@ViewData["ButtonName"]</button>
            <input type="hidden" asp-for="Type" />
        </form>
        <div>
        </div>
    </div>
</div>