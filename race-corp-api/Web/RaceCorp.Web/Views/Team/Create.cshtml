@using RaceCorp.Web.ViewModels.Team
@model TeamCreateBaseModel;
@{
    this.ViewData["Title"] = "Create team";
}
<h1>@ViewData["Title"]</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" class="form-group" enctype="multipart/form-data">
    <div class="form-control mb-3">
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Name</span>
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Description</span>
            <textarea class="form-control" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon2">Town</span>
            <input asp-for="TownName" class="form-control" placeholder="Town name here">
            <span asp-validation-for="TownName" class="text-danger"></span>
        </div>
        <div class="form-group mb-1">
            <label asp-for="Logo">Upload Team Logo:</label>
            <input asp-for="Logo" name="Logo" class="form-control mb-1" style="width: 100%;" />
        </div>

        <div>
            <button class="btn btn-outline-secondary" type="submit">Create</button>
        </div>
    </div>

    <input type="hidden" asp-for="CreatorId" />
</form>