@model PagingViewModel
<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!Model.HasPreviousPage) {
        <text>disabled</text>
 }">
            <a class="page-link" asp-controller="@ViewData["controller"]" asp-action="@ViewData["action"]"  asp-route-modelId="@ViewData["modelId"]" asp-route-pageId="@Model.PreviousPageNumber">Previous</a>
        </li>
        @for (int i = Model.PageNumber - 4; i < Model.PageNumber; i++)
        {
            if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-controller="@ViewData["controller"]" asp-action="@ViewData["action"]" asp-route-modelId="@ViewData["modelId"]" asp-route-pageId="@i">@i</a></li>
            }
        }
        <li class="page-item active" aria-current="page">
            <span class="page-link">
                @Model.PageNumber
                <span class="sr-only">(current)</span>
            </span>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 4; i++)
        {
            if (i <= Model.PagesCount)
            {
                <li class="page-item"><a class="page-link" asp-controller="@ViewData["controller"]" asp-action="@ViewData["action"]" asp-route-modelId="@ViewData["modelId"]" asp-route-pageId="@i">@i</a></li>
            }
        }
        <li class="page-item @if (!Model.HasNextPage) {
        <text>disabled</text>
 }">
            <a class="page-link" asp-controller="@ViewData["controller"]" asp-action="@ViewData["action"]" asp-route-modelId="@ViewData["modelId"]" asp-route-pageId="@Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>
